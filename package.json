                        "collectionFormat": "multi"
                    },
                    {
                        "name": "adress",
                        "in": "formData",
                        "description": "Direccion del usuario",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "email",
                        "in": "formData",
                        "description": "Email de usuario",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "Contrase침a",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "nick",
                        "in": "formData",
                        "description": "Alias",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "role",
                        "in": "query",
                        "description": "Tipo de usuario",
                        "required": true,
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "Cliente",
                                "Trabajador"
                            ],
                            "default": "Cliente"
                        },
                        "collectionFormat": "multi"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Registro correcto"
                    },
                    "400": {
                        "description": "Ha ocurrido un error en la peticion"
                    },
                    "404": {
                        "description": "No se ha registrado el usuario"
                    },
                    "409": {
                        "description": "El usuario ya se encuentra registrado"
                    }
                },
                "security": [{
                    "user_auth": [
                        "write:user",
                        "read:user"
                    ]
                }]
