                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "surname",
                        "in": "formData",
                        "description": "Apellidos",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "ci",
                        "in": "formData",
                        "description": "Cedula de Identidad",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "exp",
                        "in": "query",
                        "description": "Cedula expedida en:",
                        "required": true,
                        "type": "array",
                        "items": {
                            "type": "string",
